#:kivy 2.3.0

<ReencryptionWindow>:

    orientation: 'vertical'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_y: None
    height: 625
    padding: [100,100,100,100]

    TextInput:
        id: text_to_reencrypt_input
        hint_text: 'Something to reencrypt...'
        padding: [10, (self.height - self.line_height) / 2]
        size_hint_y: None
        height: 50
        password: True

    TextInput:
        id: old_reencryption_key_input
        hint_text: 'Old reencryption key'
        padding: [10, (self.height - self.line_height) / 2]
        size_hint_y: None
        height: 50
        password: True

    TextInput:
        id: new_reencryption_key_input
        hint_text: 'New reencryption key'
        padding: [10, (self.height - self.line_height) / 2]
        size_hint_y: None
        height: 50
        password: True

    Button:
        id: reencrypt_button
        text: 'Reencrypt'
        size_hint_y: None
        height: 50

    TextInput:
        id: reencrypted_result
        size_hint_y: None
        height: 100
        readonly: True
        multiline: True

    Label:
        id: copy_confirmation
        size_hint_y: None
        height: 50

    BoxLayout:
        size_hint_y: None
        orientation: 'horizontal'

        Button:
            text: 'Copy'
            size_hint_y: None
            height: 50
            on_press: root.on_copy_button_press()


        Button:
            text: 'Clear'
            size_hint_y: None
            height: 50
            on_press: reencrypted_result.text = ""