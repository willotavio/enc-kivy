<EncryptionWindow>:

    orientation: 'vertical'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_y: None
    height: 600
    padding: [100,100,100,100]

    TextInput:
        id: text_to_encrypt_input
        hint_text: 'Something to encrypt...'
        padding: [10, (self.height - self.line_height) / 2]
        size_hint_y: None
        height: 50
        password: True

    TextInput:
        id: encryption_key_input
        hint_text: 'Encryption key'
        padding: [10, (self.height - self.line_height) / 2]
        size_hint_y: None
        height: 50
        password: True

    Button:
        id: encrypt_button
        text: 'Encrypt'
        size_hint_y: None
        height: 50

    TextInput:
        id: encrypted_result
        size_hint_y: None
        height: 100
        readonly: True
        multiline: True

    Label:
        id: copy_confirmation
        size_hint_y: None
        height: 50

    BoxLayout:
        size_hint_y: None
        orientation: 'horizontal'

        Button:
            text: 'Copy'
            size_hint_y: None
            height: 50
            on_press: root.on_copy_button_press()

        Button:
            text: 'Clear'
            size_hint_y: None
            height: 50
            on_press: encrypted_result.text = ""
